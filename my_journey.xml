<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Icon and Title -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/layout"
                android:contentDescription="@string/profile_icon"
                android:clickable="true"
                android:focusable="true"
                android:onClick="goToDashboard"
                android:importantForAccessibility="yes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:text="@string/app_name"
                android:textColor="#FF6600"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- Avatar and Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/woman"
                android:contentDescription="@string/user_avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:text="@string/my_journey"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- Task Planned -->
        <TextView
            android:id="@+id/taskPlannedLabel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="@string/task_planned"
            android:textColor="#FF6600"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:text="@string/task_planned_desc"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#000000"
            android:elevation="4dp" />

        <!-- Task in Progress -->
        <TextView
            android:id="@+id/taskInProgressLabel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="@string/task_in_progress"
            android:textColor="#FF6600"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:text="@string/task_in_progress_desc"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:elevation="4dp" />

        <!-- Completed Tasks -->
        <LinearLayout
            android:id="@+id/completedTaskSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#222"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Tasks"
                android:textColor="#FF6600"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Great job on completing your tasks!"
                android:textColor="#FFFFFF"
                android:background="#333333"
                android:padding="10dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>


        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
