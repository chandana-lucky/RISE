<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B18"
    android:padding="16dp"
    tools:context=".CompanionStatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/layout"
                android:contentDescription="@string/profile_icon"
                android:focusable="true"
                android:clickable="true"
                android:onClick="goToDashboard" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="#FF6600"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:focusable="true" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_companion_status"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:focusable="true" />

        <!-- Companion Image -->
        <ImageView
            android:id="@+id/companionImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/stage1_seed"
            android:contentDescription="@string/companion_image" />

        <!-- Growth Bar Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/growth_level"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:focusable="true" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/growthProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_custom" />

        <!-- Labels for status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/currentLevelLabel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/current_level"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />


        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:backgroundTint="#444"
            android:textColor="#FFF" />
    </LinearLayout>
</ScrollView>
